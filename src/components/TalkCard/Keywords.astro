---
const { keywords, maxVisible = 4 } = Astro.props;
---

{keywords && keywords.length > 0 && (
  <div class="flex flex-wrap gap-2 mb-3">
    {keywords.slice(0, maxVisible).map((keyword) => (
      <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full">
        {keyword}
      </span>
    ))}
    {keywords.length > maxVisible && (
      <span
        class="px-3 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded-full cursor-help"
        title={keywords.slice(maxVisible).join(', ')}
      >
        +{keywords.length - maxVisible} more
      </span>
    )}
  </div>
)}